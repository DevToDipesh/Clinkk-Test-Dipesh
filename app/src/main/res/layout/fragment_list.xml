<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewHospitals.ListFragment">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/smallPadding"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/rvHospitals"
        android:text="Nearest Clinkk Medical Centre"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/subHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
/>
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rvHospitals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />
    <include layout="@layout/no_clinic_found"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/vNoData"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"/>
    <include


        android:id="@+id/ivLoading"
        layout="@layout/loading_view" />
</androidx.constraintlayout.widget.ConstraintLayout>